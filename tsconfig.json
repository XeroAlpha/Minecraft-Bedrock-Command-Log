{
    "include": ["./**/*.ts"],
    "compilerOptions": {
        "moduleResolution": "bundler",
        "module": "Preserve",
        "target": "ESNext",
        "lib": ["ESNext"],
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "verbatimModuleSyntax": true
    }
}
